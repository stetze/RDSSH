<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="RDSSH.Views.SessionsHostWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RDSSH.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:native="using:RDSSH.Controls"
    mc:Ignorable="d"
    Title="RDSSH">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <!-- small title row -->
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TabView fills the whole area; no left margin so there's no visible gap on the left -->
        <muxc:TabView x:Name="SessionsTabView"
                      Grid.Row="0"
                      Grid.RowSpan="2"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      TabWidthMode="SizeToContent"
                      IsAddTabButtonVisible="True"
                      Margin="0"
                      Padding="8,0,0,0"
                      TabCloseRequested="SessionsTabView_TabCloseRequested"
                      />

        <!-- Drag overlay: full-width overlay that will be shifted to start right of the tab headers at runtime -->
        <Border Grid.Row="0" Background="Transparent" x:Name="DragOverlay" Height="20" HorizontalAlignment="Left" />
    </Grid>
</Window>