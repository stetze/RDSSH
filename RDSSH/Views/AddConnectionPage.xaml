<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RDSSH.Views.AddConnectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Margin="16,36,16,36" HorizontalAlignment="Left" Width="Auto">

            <CommandBar HorizontalAlignment="Left" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                <AppBarButton Icon="Back" Label="Zurück" Click="BackButton_Click"/>
            </CommandBar>

            <TextBlock Text="Verbindung" Style="{StaticResource SubtitleTextBlockStyle}" />

            <TextBlock Text="Protokoll" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,12,0,0" />
            <ComboBox x:Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged" Margin="0,10,0,0">
                <ComboBoxItem>RDP</ComboBoxItem>
                <ComboBoxItem>SSH</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Port" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="PortTextBox" PlaceholderText="3389" Width="300"/>

            <TextBlock Text="Anzeigename" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="DisplaynameTextBox" PlaceholderText="(Optional)" Width="300"/>

            <TextBlock Text="Hostname" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="HostnameTextBox" PlaceholderText="Hostname oder IP-Adresse" Width="300"/>

            <TextBlock Text="Domain" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="DomainTextBox" PlaceholderText="(Optional)" Width="300"/>

            <TextBlock Text="Benutzername" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <ComboBox x:Name="CredentialComboBox"
                      ItemsSource="{x:Bind CredentialService.CredentialDataSet}"
                      DisplayMemberPath="Username"
                      Width="300"
                      Margin="0,10,0,16"/>

            <!-- Advanced -->
            <Expander Header="Erweiterte Einstellungen" IsExpanded="False" Width="420">
                <StackPanel>

                    <TextBlock Text="Sicherheit" Style="{StaticResource BodyStrongTextBlockStyle}" />

                    <CheckBox x:Name="IgnoreCertCheckBox"
                              Content="Zertifikat ignorieren (/cert:ignore)"
                              Margin="0,10,0,0"/>

                    <CheckBox x:Name="TlsLegacyCheckBox"
                              Content="Legacy TLS erlauben (/tls-seclevel:0)"
                              Margin="0,10,0,0"/>

                    <TextBlock Text="Anzeige" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,12,0,0" />

                    <CheckBox x:Name="DynamicResolutionCheckBox"
                              Content="Dynamische Auflösung (/dynamic-resolution)"
                              IsChecked="True"
                              Margin="0,10,0,0"/>

                    <TextBlock Text="Komfort" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,12,0,0" />

                    <CheckBox x:Name="ClipboardCheckBox"
                              Content="Zwischenablage (/clipboard)"
                              IsChecked="True"
                              Margin="0,10,0,0"/>

                    <TextBlock Text="Erweitert" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,12,0,0" />

                    <CheckBox x:Name="AdminModeCheckBox"
                              Content="Mit Administratormodus verbinden (/admin)"
                              Margin="0,10,0,0"/>

                    <TextBlock Text="LoadBalanceInfo" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,12,0,0" />
                    <TextBox x:Name="LoadBalanceInfoTextBox"
                             PlaceholderText="(Optional) tsv://MS Terminal Services Plugin.1...."
                             Margin="0,10,0,0"
                             Width="420"/>

                    <TextBlock Text="Weitere FreeRDP-Argumente" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,12,0,0" />
                    <TextBox x:Name="ExtraArgsTextBox"
                             PlaceholderText="(Optional) z.B. /sound:sys:wasapi /rfx"
                             Margin="0,10,0,0"
                             Width="420"/>

                </StackPanel>
            </Expander>

            <Button Content="Speichern" Click="SaveButton_Click" Margin="0,20,0,0"/>

        </StackPanel>
    </ScrollViewer>
</Page>
