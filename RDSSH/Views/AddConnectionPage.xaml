<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RDSSH.Views.AddConnectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:RDSSH.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:models="using:RDSSH.Models"
    xmlns:service="using:RDSSH.Services"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Margin="16,36,16,36" HorizontalAlignment="Left" Width="Auto">
            <!-- CommandBar -->
            <CommandBar HorizontalAlignment="Left" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                <AppBarButton Icon="Back" Label="ZurÃ¼ck" Click="BackButton_Click"/>
            </CommandBar>

            <!-- Textfeld -->
            <TextBlock Text="Verbindung" Style="{StaticResource SubtitleTextBlockStyle}" />
            <TextBlock Text="Protokoll" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,12,0,0" />
            <ComboBox x:Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged" Margin="0,10,0,0">
                <ComboBoxItem>RDP</ComboBoxItem>
                <ComboBoxItem>SSH</ComboBoxItem>
            </ComboBox>
            <TextBlock Text="Port" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="PortTextBox" PlaceholderText="" Width="300"/>
            <TextBlock Text="Anzeigename" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="DisplaynameTextBox" PlaceholderText="(Optional)" Width="300"/>
            <TextBlock Text="Hostname" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="HostnameTextBox" PlaceholderText="Hostname oder IP-Adresse" Width="300"/>
            <TextBlock Text="Domain" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBox x:Name="DomainTextBox" PlaceholderText="" Width="300"/>
            <TextBlock Text="Benutzername" Style="{StaticResource BodyStrongTextBlockStyle}" />
            <ComboBox x:Name="CredentialComboBox" ItemsSource="{x:Bind CredentialService.CredentialDataSet}" DisplayMemberPath="Username" Width="300" Margin="0,10,0,16"/>

            <Expander Header="Erweiterte Einstellungen" IsExpanded="False" Width="300">
                <StackPanel>
                    <TextBlock Text="LoadBalanceInfo" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBox x:Name="LoadBalanceInfoTextBox" PlaceholderText="(Optional) tsv://..." Margin="0,10,0,0" Width="300"/>
                    <CheckBox Content="Mit Administratormodus verbinden" Margin="0,10,0,0"/>
                </StackPanel>
            </Expander>
            <Button Content="Speichern" Click="SaveButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
